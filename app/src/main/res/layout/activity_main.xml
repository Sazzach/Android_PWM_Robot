<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iosazzach.hackaday.pwm_robot.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Manual Mode"
        android:id="@+id/manuelButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="launchManualMode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Line Follow"
        android:id="@+id/lineFollowButton"
        android:onClick="launchLineFollow"
        android:layout_below="@+id/manuelButton"
        android:layout_alignRight="@+id/manuelButton"
        android:layout_alignEnd="@+id/manuelButton"
        android:layout_alignLeft="@+id/manuelButton"
        android:layout_alignStart="@+id/manuelButton" />

</RelativeLayout>
